{% extends 'JRsShopBundle::base.html.twig' %}

{% block body -%}
    <h1>Product list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Article</th>
                <th>Orignarticle</th>
                <th>Analog</th>
                <th>Image</th>
                <th>Brand</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Description</th>
                <th>Specification</th>
                <th>Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('jrs_product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.article }}</td>
                <td>{{ entity.orignArticle }}</td>
                <td>{{ entity.analog }}</td>
                <td>{{ entity.image }}</td>
                <td>{{ entity.brand }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.quantity }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.specification }}</td>
                <td>{{ entity.cost }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('jrs_product_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('jrs_product_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('jrs_product_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
