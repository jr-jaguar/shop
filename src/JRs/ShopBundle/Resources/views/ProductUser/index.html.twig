{% extends 'JRsShopBundle::base.html.twig' %}

{% block body -%}
    <h1>Product list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Article</th>
                <th>Orignarticle</th>
                <th>Image</th>
                <th>Brand</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('jrs_product_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><a href="{{ path('jrs_product_user_show', { 'id': entity.id }) }}">{{ entity.article }}</a></td>
                <td><a href="{{ path('jrs_product_user_show', { 'id': entity.id }) }}">{{ entity.orignArticle }}</a></td>
                <td><a href="{{ path('jrs_product_user_show', { 'id': entity.id }) }}">{{ entity.image }}</a></td>
                <td>{{ entity.brand }}</td>
                <td><a href="{{ path('jrs_product_user_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.quantity }}</td>
                <td>{{ entity.cost }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
